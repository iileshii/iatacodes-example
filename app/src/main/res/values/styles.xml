<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="AppTheme.Text.Primary">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="AppTheme.Text.Secondary">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

</resources>
